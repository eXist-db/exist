     <test output="text">
        <task>util:import-module</task>
        <code>
            let $null := util:import-module(xs:anyURI('http://example.com/test-a'), 'testmodule', xs:anyURI('xmldb:exist:///db/util-test/test.xqm'))
            return util:eval('testmodule:test()')
