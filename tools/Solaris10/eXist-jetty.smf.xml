<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<!--
	2009-09-16
	Adam Retter <adam@exist-db.org>
	Service manifest for eXist Jetty
-->

<service_bundle type="manifest" name="eXist:jetty">
    
    <service name="application/eXist" version="1.4" type="service">
        
        <create_default_instance enabled="false" />
        
        <single_instance/>
        
        <!-- dependency on the filesystem -->
        <dependency name='fs' grouping='require_all' restart_on='none' type='service'>
            <service_fmri value='svc:/system/filesystem/local' />
        </dependency>
        
        <!-- start -->
        <exec_method type="method" name="start" exec="/lib/svc/method/svc-eXist-jetty start" timeout_seconds="300">
            <method_context>
                <method_credential user="exist" group="exist" />
            </method_context>
        </exec_method>
        
        <!-- stop -->
        <exec_method type="method" name="stop" exec="/lib/svc/method/svc-eXist-jetty stop" timeout_seconds="300">
            <method_context>
                <method_credential user="exist" group="exist" />
            </method_context>
        </exec_method>
        
        <template>
            <common_name>
                <loctext xml:lang="C">eXist XML Native Database (Jetty)</loctext>
            </common_name>
            <documentation>
                <doc_link name="eXist Website" uri="http://www.exist-db.org"/>
                <doc_link name="eXist Wiki" uri="http://atomic.exist-db.org"/>
            </documentation>
        </template>
        
    </service>
    
</service_bundle>
