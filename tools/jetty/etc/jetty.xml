  <!-- =========================================================== -->
  <!-- change java.io.tmpdir default value                         -->
  <!-- =========================================================== -->
  <Call class="java.lang.System" name="setProperty">
    <Arg>java.io.tmpdir</Arg>
    <Arg><SystemProperty name="jetty.home" default="."/>/tmp</Arg>
  </Call>

</Configure>
