            <sysproperty key="exist.recovery.progressbar.hide" value="${exist.recovery.progressbar.hide}"/>
            <sysproperty key="java.util.logging.manager" value="org.apache.logging.log4j.jul.LogManager"/>
            <!-- fixme! - jetty.port.jetty /ljo -->
