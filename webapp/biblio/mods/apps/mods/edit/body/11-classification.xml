<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" class="classification"  class="tab-id">
    <!--DLF/Aquifer: OPTIONAL-->
    <!--Cluster: omit-->
    <fieldset>
        <legend>
            <span class="legend">Classification</span>
        </legend>
        <xf:hint> A designation applied to a resource that indicates the subject by applying a formal system of coding and organising resources according to
            subject areas. Classification contains the classification number of a resource. It may also include the full call number if desired. </xf:hint>
        <!--classification repeat begins-->
        <xf:repeat nodeset="instance('save-data')/mods:classification" id="classification-repeat">
            <div class="block-form">
                <!--DLF/Aquifer: REQUIRED-->
                <!--Cluster: include-->
                <xf:select1 ref="./@authority" selection="open">
                    <xf:label>Authority:</xf:label>
                    <xf:hint> The name of the authoritative list for a controlled value is recorded here. Authority contains designation of the source of the
                        authority for classification schemes. </xf:hint>
                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='classification-authority-code']/items/item">
                        <xf:label ref="label"/>
                        <xf:value ref="value"/>
                    </xf:itemset>
                </xf:select1>
                <br/>
                <!--DLF/Aquifer: RECOMMENDED IF APPLICABLE-->
                <!--Cluster: include-->
                <xf:input ref="./@edition" class="text_50">
                    <xf:label>Edition:</xf:label>
                    <xf:hint> This attribute contains a designation of the edition of the particular classification scheme indicated in authority for those
                        schemes that are issued in editions. </xf:hint>
                </xf:input>
                <br/>
                <!--DLF/Aquifer: N/A-->
                <!--Cluster: omit-->
                <!-- <xf:input ref="./@displayLabel" class="text_150"> <xf:label>Display Label: </xf:label> <xf:hint>Hint</xf:hint> </xf:input> <br/> -->
                <!--DLF/Aquifer: N/A-->
                <!--Cluster: omit-->
                <!-- <xf:select1 ref="./@lang"> <xf:label>Language:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> -->
                <!--DLF/Aquifer: NOT RECOMMENDED-->
                <!--Cluster: omit-->
                <!-- <xf:select1 ref="./@xml:lang"> <xf:label>xml:lang:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> <br/> -->
                <!--DLF/Aquifer: N/A-->
                <!--Cluster: omit-->
                <!-- <xf:select1 ref="./@script"> <xf:label>Script:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='script-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> -->
                <!--DLF/Aquifer: N/A-->
                <!--Cluster: omit-->
                <!-- <xf:select1 ref="./@transliteration"> <xf:label>Transliteration:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> -->
                <br/>
                <xf:input ref="." class="text_150">
                    <xf:label>Classification:</xf:label>
                    <xf:hint>A designation applied to a resource that indicates the subject by applying a formal system of coding and organising resources
                        according to subject areas.</xf:hint>
                </xf:input>
            </div>
            <!--classification delete begins-->
            <xf:trigger ref="self::node()[count(../mods:classification) &gt; 1]">
                <xf:label>Delete This Classification</xf:label>
                <xf:delete ev:event="DOMActivate" nodeset="instance('save-data')/mods:classification" at="index('classification-repeat')"/>
            </xf:trigger>
            <!--classification delete ends-->
            <div class="hr"/>
        </xf:repeat>
        <!--classification repeat ends-->
        <!--classification add begins-->
        <xf:trigger class="add">
            <xf:label>Add Classification</xf:label>
            <xf:action ev:event="DOMActivate">
                <xf:insert nodeset="mods:classification" at="index('classification-repeat')" position="after"
                    origin="instance('insert-templates')/mods:classification"/>
                <xf:setvalue ref="instance('save-data')/mods:classification[last()]" value="''"/>
            </xf:action>
        </xf:trigger>
        <!--classification add ends-->
    </fieldset>
</div>