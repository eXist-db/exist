<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" class="note" tab-id="note">
    <!--note begins-->
    <!--DLF/Aquifer: RECOMMENDED OF APPLICABLE-->
    <!--Cluster: include-->
    <fieldset>
        <legend>
            <span class="legend">Note</span>
        </legend>
        <xf:hint>General information relating to a resource.<br/> Note should be used only for information that cannot be encoded in another, more specific,
            ways. </xf:hint>
        <!--note repeat begins-->
        <xf:repeat nodeset="instance('save-data')/mods:note" id="note-repeat">
            <!--note input begins-->
            <!--DLF/Aquifer: OPTIONAL-->
            <!--Cluster: omit-->
            <!-- <xf:input ref="./@type"> <xf:label>Type:</xf:label> <xf:hint>Hint</xf:hint> </xf:input> -->
