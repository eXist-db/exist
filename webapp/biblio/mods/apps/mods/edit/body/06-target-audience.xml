<?xml version="1.0" encoding="UTF-8"?>
<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" class="target-audience">
    <!--targetAudience begins-->
    <fieldset>
        <legend>
            <span class="legend">Target Audience</span>
        </legend>
        <xf:hint>
            A description of the intellectual level of the audience for which the resource is intended.
            When more than one target audience is recorded, the element is repeated. 
            Either a controlled list of values or free text may be used.
        </xf:hint>
        
        <!--targetAudience repeat begins-->
        <xf:repeat nodeset="instance('save-data')/mods:targetAudience" id="target-audience-repeat">
            <div class="block-form">
                
                <!--targetAudience input begins-->
                <xf:select1 ref="./@authority" selection="open">
                    <xf:label>Authority:</xf:label>
                    <xf:hint>
                        The name of the authoritative list for a controlled value is recorded here. 
                    </xf:hint>
                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='physical-location-authority-code']/items/item">
                        <xf:label ref="label"/>
                        <xf:value ref="value"/>
                    </xf:itemset>
                </xf:select1>
                <br/>
                <xf:select1 ref="./@lang">
                    <xf:label>Language:</xf:label>
                    <xf:hint>
                        Hint 
                    </xf:hint>
                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-code']/items/item">
                        <xf:label ref="label"/>
                        <xf:value ref="value"/>
                    </xf:itemset>
                </xf:select1>
                
                <!--DLF/Aquifer: NOT RECOMMENDED]-->
                <!--Cluster: omit-->
                <xf:select1 ref="./@xml:lang">
                    <xf:label>xml:lang:</xf:label>
                    <xf:hint>
                        Hint 
                    </xf:hint>
                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-2-type-code']/items/item">
                        <xf:label ref="label"/>
                        <xf:value ref="value"/>
                    </xf:itemset>
                </xf:select1>
                <br/>
                <xf:select1 ref="./@script">
                    <xf:label>Script:</xf:label>
                    <xf:hint>
                        Hint 
                    </xf:hint>
                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='script-code']/items/item">
                        <xf:label ref="label"/>
                        <xf:value ref="value"/>
                    </xf:itemset>
                </xf:select1>
                <xf:select1 ref="./@transliteration" selection="open">
                    <xf:label>Transliteration:</xf:label>
                    <xf:hint>
                        Hint
                    </xf:hint>
                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-code']/items/item">
                        <xf:label ref="label"/>
                        <xf:value ref="value"/>
                    </xf:itemset>
                </xf:select1>
                <div class="hr"/>
                <xf:input ref="." class="text_150">
                    <xf:label>Target Audience: </xf:label>
                    <xf:hint>
                        Hint
                    </xf:hint>
                </xf:input>
                
                <!--targetAudience input ends-->
                
                <!--targetAudience delete begins-->
            </div>
            <xf:trigger ref="self::node()[count(../mods:targetAudience) &gt; 1]">
                <xf:label>Delete This Target Audience</xf:label>
                <xf:hint>Hint</xf:hint>
                <xf:delete ev:event="DOMActivate" nodeset="instance('save-data')/mods:targetAudience" at="index('target-audience-repeat')"/>
            </xf:trigger>
            <!--targetAudience delete ends-->
            <div class="hr"/>
        </xf:repeat>
        
        <!--targetAudience repeat ends-->
        
        <!--targetAudience add begins-->
        <xf:trigger class="add">
            <xf:label>Add Target Audience</xf:label>
            <xf:hint>Hint</xf:hint>
            <xf:action ev:event="DOMActivate">
                <xf:insert nodeset="mods:targetAudience" at="index('target-audience-repeat')" position="after" origin="instance('insert-templates')/mods:targetAudience"/>
                <xf:setvalue ref="instance('save-data')/mods:targetAudience[last()]" value="''"/>
            </xf:action>
        </xf:trigger>
        
        <!--targetAudience add ends-->
    </fieldset>
    
    <!--targetAudience ends-->
</div>