<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms" class="contents-misc">
    <!--tableOfContents begins-->
    <!--DLF/Aquifer: RECOMMENDED IF APPLICABLE-->
    <!--Cluster: include-->
    <fieldset>
        <legend>
            <span class="legend">Table Of Contents</span>
        </legend>
        <xf:hint> A description of the contents of a resource.<br/> A Table Of Contents can be rendered e.g. with dashes separating the chapter titles.<br/> Use
            of Table Of Contents should be determined by the complexity of the digital object and whether or not the information is readily available. If more
            structured information is needed, consider using Related Item with the type="constituent" attribute instead. Table Of Contents can also be used as
            an empty element with an xlink:href attribute to link to an external table of contents. </xf:hint>
        <!--tableOfContents repeat begins-->
        <xf:repeat nodeset="instance('save-data')/mods:tableOfContents" id="tableOfContents-repeat">
            <!--tableOfContents input begins-->
            <!--DLF/Aquifer: NOT RECOMMENDED-->
            <!--Cluster: omit-->
            <!-- <xf:input ref="./@type"> <xf:label>Type:</xf:label> <xf:hint>Hint</xf:hint> </xf:input> <br/> -->
            <!--DLF/Aquifer: RECOMMENDED IF APPLICABLE-->
            <!--Cluster: include-->
            <xf:input ref="./@xlink" class="text_50">
                <xf:label>XLink: </xf:label>
                <xf:hint> The xlink attribute is used to reference an external resource, such as a second metadata record, such as a Related Item or a Table Of
                    Contents. </xf:hint>
            </xf:input>
            <br/>
            <!--DLF/Aquifer: OPTIONAL-->
            <!--Cluster: omit-->
            <!-- <xf:input ref="./@displayLabel" class="text_150"> <xf:label>Display Label: </xf:label> <xf:hint>Hint</xf:hint> </xf:input> <br/> -->
            <!--DLF/Aquifer: N/A-->
            <!--Cluster: omit: would follow languageOfResource-->
            <!-- <xf:select1 ref="./@lang"> <xf:label>Language:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> -->
            <!--DLF/Aquifer: N/A-->
            <!--Cluster: omit: would follow languageOfResource-->
            <!-- <xf:select1 ref="./@xml:lang"> <xf:label>xml:lang:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-2-type-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> <br/> -->
            <!--DLF/Aquifer: N/A-->
            <!--Cluster: omit-->
            <!-- <xf:select1 ref="./@script"> <xf:label>Script:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='script-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> -->
            <!--DLF/Aquifer: N/A-->
            <!--Cluster: omit-->
            <!-- <xf:select1 ref="./@transliteration"> <xf:label>Transliteration:</xf:label> <xf:hint>Hint</xf:hint> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> <br/> -->
            <xf:textarea ref="." class="textarea">
                <xf:hint>A description of the contents of a resource.</xf:hint>
            </xf:textarea>
            <!--tableOfContents input ends-->
            <!--tableOfContents delete begins-->
            <xf:trigger ref="self::node()[count(../mods:tableOfContents) &gt; 1]">
                <xf:label>Delete This Table Of Contents</xf:label>
                <xf:delete ev:event="DOMActivate" nodeset="instance('save-data')/mods:tableOfContents" at="index('tableOfContents-repeat')"/>
            </xf:trigger>
            <!--tableOfContents delete ends-->
            <div class="hr"/>
        </xf:repeat>
        <!--tableOfContents repeat ends-->
        <!--tableOfContents add begins-->
        <xf:trigger class="add">
            <xf:label>Add Table Of Contents</xf:label>
            <xf:action ev:event="DOMActivate">
                <xf:insert nodeset="mods:tableOfContents" at="index('tableOfContents-repeat')" position="after"
                    origin="instance('insert-templates')/mods:tableOfContents"/>
                <xf:setvalue ref="instance('save-data')/mods:tableOfContents[last()]" value="''"/>
            </xf:action>
        </xf:trigger>
        <!--tableOfContents add ends-->
    </fieldset>
    <!--tableOfContents ends-->
    <!--note begins-->
    <!--DLF/Aquifer: RECOMMENDED OF APPLICABLE-->
    <!--Cluster: include-->
    <fieldset>
        <legend>
            <span class="legend">Note</span>
        </legend>
        <xf:hint>General information relating to a resource.<br/> Note should be used only for information that cannot be encoded in another, more specific,
            ways. </xf:hint>
        <!--note repeat begins-->
        <xf:repeat nodeset="instance('save-data')/mods:note" id="note-repeat">
