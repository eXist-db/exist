<!-- Generates html version of Unit Test results //--><!-- TODO: uses XSLT 2.0 at the moment //-->
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:c="http://www.w3.org/ns/xproc-step" xmlns:fn="http://www.w3.org/2003/05/xpath-functions" version="2.0">

   <xsl:template match="result">
        <html>
            <head>
                <style>
             .good {background-color: #3F0;}
             .bad {background-color:#F30;}
         </style>
            </head>
            <body>
                <h1>
                    <xsl:value-of select="@title"/>
                </h1>
                <p>
                    <b>
                        <xsl:value-of select="round((@pass div @total)*100)"/>% Tests ran successfully</b>
                </p>
                <table border="1">
                    <tr>
                        <td>test name</td>
                        <td>status</td>
                        <td>result</td>
                        <td>expected</td>
                    </tr>
                    <xsl:apply-templates select="test"/>
                </table>

failed: <xsl:value-of select="@nopass"/> /  success: <xsl:value-of select="@pass"/> / total: <xsl:value-of select="@total"/>
                <hr/>
                <p style="text-align:right">
                    <i>
                         generated by <a href="http://exist.sourceforge.net/xproc">xprocxq</a>, by jim.fuller@webcomposite.com</i>
                </p>
            </body>
        </html>
    </xsl:template>
    <xsl:template match="test">
        <tr>
            <td>
                <b>
                    <xsl:value-of select="@file"/>
                </b>
            </td>
            <td>
            <xsl:choose>
            <xsl:when test="c:result ='true'">
                <div class="good">passed</div>
            </xsl:when>
            <xsl:when test="c:result='false'">
                <div class="bad">failed</div>
            </xsl:when>
            <xsl:otherwise>
                <div>test failed or crashed</div>
            </xsl:otherwise>
            </xsl:choose>
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
    </xsl:template>
</xsl:stylesheet>