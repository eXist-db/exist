<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
    <programGroup defaultName="eXist-db XML Database" location="applications"/>

    <shortcut
            name="eXist-db Database"
            description="eXist-db XML Database Launcher"
            type="Application"
            encoding="UTF-8"
            target="$INSTALL_PATH/bin/launcher.sh"
            workingDirectory="$INSTALL_PATH"
            terminal="false"
            programGroup="yes"
            iconFile="$INSTALL_PATH/lib/icon.png"
            desktop="yes"/>

    <shortcut name="Uninstall eXist-db"
              description="Uninstall eXist-db"
              type="Application"
              encoding="UTF-8"
              target="$JAVA_HOME/bin/java"
              commandLine="-jar &quot;$INSTALL_PATH/lib/izpack-uninstaller.jar&quot;"
              workingDirectory="$INSTALL_PATH"
              terminal="false"
              programGroup="yes"
              iconFile="trashcan_full"
              desktop="no"/>
</izpack:shortcuts>
