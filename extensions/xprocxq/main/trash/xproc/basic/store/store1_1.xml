<p:pipeline xmlns:p="http://www.w3.org/ns/xproc">

<p:store href="file:result/pstore-test-file.xml">
    <p:input port="source">
        <p:inline>
            <store-step-successfully-saved/>
        </p:inline>
    </p:input>
    
     <p:with-option name="byte-order-mark"/>                            <!-- boolean -->
     <p:with-option name="cdata-section-elements" select="''"/>         <!-- ListOfQNames -->
     <p:with-option name="doctype-public"/>                             <!-- string -->
     <p:with-option name="doctype-system"/>                             <!-- anyURI -->
     <p:with-option name="encoding"/>                                   <!-- string -->
     <p:with-option name="escape-uri-attributes" select="'false'"/>     <!-- boolean -->
     <p:with-option name="include-content-type" select="'true'"/>       <!-- boolean -->
     <p:with-option name="indent" select="'false'"/>                    <!-- boolean -->
     <p:with-option name="media-type"/>                                 <!-- string -->
     <p:with-option name="method" select="'xml'"/>                      <!-- QName -->
     <p:with-option name="normalization-form" select="'none'"/>         <!-- NormalizationForm -->
     <p:with-option name="omit-xml-declaration" select="'true'"/>       <!-- boolean -->
     <p:with-option name="standalone" select="'omit'"/>                 <!-- "true" | "false" | "omit" -->
     <p:with-option name="undeclare-prefixes"/>                         <!-- boolean -->
     <p:with-option name="version" select="'1.0'"/>                     <!-- string -->
</p:store>
     
</p:pipeline>
