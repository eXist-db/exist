<p:declare-step name="main"
            xmlns:p="http://www.w3.org/ns/xproc">


<!-- unbound output port //-->

      <p:identity name="step1">
          <p:input port="source">
              <p:pipe step="step3" port="result"/>
          </p:input>
      </p:identity>

      <p:identity name="step2">
        <p:input port="source">
            <p:inline>
                <mytest1/>
            </p:inline>
        </p:input>
      </p:identity>
      
      <p:identity name="step3">
        <p:input port="source">
            <p:inline>
                <mytest2/>
            </p:inline>
        </p:input>
      </p:identity>

</p:declare-step>