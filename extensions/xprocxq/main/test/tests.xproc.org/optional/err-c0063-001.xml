<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error"
        error="err:XC0063">
  
  <t:title>Test err:XC0063 - #001</t:title>

  <t:description xmlns="http://www.w3.org/1999/xhtml">
  <p>Tests if static error XC0063 is thrown if the value of the path-separator
  option is longer than one character.</p>  
</t:description>

  
  <t:input port="source">
    <doc>some text</doc>
  </t:input>

  <t:pipeline>
    <p:pipeline>
      <p:exec name="exec" command="/bin/cat" result-is-xml="true" source-is-xml="true"
              path-separator="FOO"/>
    </p:pipeline>
  </t:pipeline>
  
</t:test>

