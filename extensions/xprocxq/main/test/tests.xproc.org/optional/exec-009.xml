<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

<t:title>Test exec-009</t:title>

<t:description xmlns="http://www.w3.org/1999/xhtml">
  <p>Tests that the path-separator character in the command will
  be replaced with the platform-specific path separator.</p>  
</t:description>

<t:input port="source">
<doc>some text
</doc>
</t:input>

<t:pipeline>
  <p:pipeline>
    <p:exec name="exec" command="\bin\cat"
	    path-separator="\"
	    result-is-xml="false" source-is-xml="false"/>
  </p:pipeline>
</t:pipeline>

<t:output port="result">
<c:result>some text
</c:result>
</t:output>

</t:test>

