<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

  <t:title>Test p:declare-step-009</t:title>

  <t:description xmlns="http://www.w3.org/1999/xhtml">
    <p>Test p:declare-step step with additional non primary input port with primary
    attribute values</p>
  </t:description>
  
  <t:input port="source">
      <doc xmlns=""/>
  </t:input>

  <t:input port="extra">
      <doc2 xmlns=""/>
  </t:input>

  <t:pipeline>
    <p:declare-step xmlns:foo="http://acme.com/test">
      <p:input port="source" primary="true"/>
      <p:output port="result" primary="true"/>
      <p:input port="extra" primary="false"/>

      <p:identity/>
  
    </p:declare-step>
  </t:pipeline>

  <t:output port="result"><doc xmlns=""/></t:output>

</t:test>

