<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">
  
  <t:title>Test p:xinclude #003</t:title>
  
  <t:input port="source">
    <t:document href="../doc/input-xinclude-recursive-1.xml"/>
  </t:input>
  
  <t:pipeline>
    <p:pipeline>
      <p:xinclude fixup-xml-base="false"/>

      <p:choose>
        <p:when test="/document/para[2][not(@xml:base)]">
          <p:identity>
            <p:input port="source">
              <p:inline>
                <success/>
              </p:inline>
            </p:input>
          </p:identity>
        </p:when>
        <p:otherwise>
          <p:identity>
            <p:input port="source">
              <p:inline>
                <failure/>
              </p:inline>
        </p:input>
          </p:identity>
        </p:otherwise>
      </p:choose>
  
    </p:pipeline>
  </t:pipeline>

  <t:output port="result">
    <success/>
  </t:output>

</t:test>

