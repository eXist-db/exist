<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error"
        error="err:XS0036">

  <t:title>Test err:XS0036 #002</t:title>
  
  <t:description xmlns="http://www.w3.org/1999/xhtml">
    <p>Tests attempting to define the same type more than once in the same scope, should throw static error XS0036</p>
  </t:description>
  
  <t:input port="source">
    <doc/>
  </t:input>

  <t:pipeline>
    <p:pipeline xmlns:test="http://www.test.com">

      <p:declare-step type="test:step">
        <p:input port="source"/>
        <p:output port="result"/>
        <p:count/>    
      </p:declare-step>

      <p:declare-step type="test:step">
        <p:input port="source"/>
        <p:output port="result"/>
        <p:count/>    
      </p:declare-step>

      <p:identity/>

    </p:pipeline>
  </t:pipeline>

</t:test>
