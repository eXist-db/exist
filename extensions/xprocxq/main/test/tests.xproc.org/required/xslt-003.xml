<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

<t:title>Test xslt-003</t:title>

<t:input port='source'>
<document>
<title>Some Title</title>
<para>Some paragraph.</para>
</document>
</t:input>

<t:input port='style'>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                version="1.0">

<xsl:output method="xml" encoding="utf-8" indent="no"
	    omit-xml-declaration="yes"/>

<xsl:template match="/">
  <!-- As originally written, this test used xsl:version, but that was -->
  <!-- a mistake. An XSLT 2.0 processor running in BCM will report -->
  <!-- xsl:version=2.0 -->
  <xsl-version>1.0</xsl-version>
</xsl:template>

</xsl:stylesheet>
</t:input>

<t:pipeline>
<p:declare-step name="pipeline">
<p:input port="parameters" kind="parameter"/>
<p:input port="source"/>
<p:input port="style"/>
<p:output port="result"/>

<p:xslt version="1.0">
  <p:input port="source">
    <p:pipe step="pipeline" port="source"/>
  </p:input>
  <p:input port="stylesheet">
    <p:pipe step="pipeline" port="style"/>
  </p:input>
</p:xslt>

</p:declare-step>
</t:pipeline>

<t:output port='result'><xsl-version>1.0</xsl-version></t:output>

</t:test>

