        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">
<t:title>Test for p:wrap #005</t:title>

<t:input port="source">
  <t:document>
  <?life of pi?>
  <doc>
    <p attr="value"/>
  </doc>
  <!-- comment -->
  </t:document>
</t:input>

<t:pipeline>
  <p:pipeline>

    <p:wrap match="/" wrapper="foo"/>

  </p:pipeline>
</t:pipeline>

<t:output port='result'>
  <foo>
    <?life of pi?>
    <doc>
      <p attr="value"/>
    </doc>
    <!-- comment -->
  </foo>
</t:output>

</t:test>


