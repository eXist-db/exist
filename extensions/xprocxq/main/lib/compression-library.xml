<p:library xmlns:p="http://www.w3.org/ns/xproc"
           xmlns:compress="http://exist-db.org/xquery/compression"
           xmlns:xproc="http://xproc.net/xproc"
           version="1.0">
   <!-- requires eXist compression extension enabled -->
   <p:declare-step type="compress:zip">
       <p:output port="result" primary="true"/>
       <p:xquery xproc:preserve-context="true">
           <p:input port="query">
               <p:inline><c:query xmlns:c="http://www.w3.org/ns/xproc-step"
 xproc:escape="true">
                            <c:result>{compression:zip(<entry name="/db/xproc/examples" type="collection"/>, true())}</c:result>
               </c:query></p:inline>
           </p:input>
       </p:xquery>
   </p:declare-step>

</p:library>
