                <exclude name="**/*.jar"/>
                <exclude name="**/*~"/>
                <exclude name="**/.*"/>
                <exclude name="**/CVS/"/>
                <exclude name="apps/**"/>
                <exclude name=".*"/>
            </fileset>
            <file src="extensions/modules/build.xml" targetdir="$INSTALL_PATH/extensions/modules"/>
        </pack>

